{
  "name": "ecom",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^4.1.2",
    "dotenv": "^8.1.0",
    "express": "^4.17.3",
    "helmet": "^3.21.1",
    "if-env": "^1.0.4",
    "mdbootstrap": "^4.8.10",
    "mocha": "^6.2.1",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
